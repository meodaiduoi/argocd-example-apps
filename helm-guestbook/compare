
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: helm-guestbook-multisource
  namespace: argocd

spec:
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true

  destination:
    server: https://kubernetes.default.svc
    namespace: helm-guestbook-multisource

  sources:
  - repoURL: 'https://github.com/argoproj/argocd-example-apps.git'
    path: helm-guestbook
    targetRevision: HEAD
    helm:
      valueFiles:
      - $values/helm-guestbook/values-dev.yaml

  - repoURL: 'https://github.com/meodaiduoi/argocd-example-apps.git'
    targetRevision: HEAD
    ref: values


